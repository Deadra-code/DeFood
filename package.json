{
  "name": "defood-vite",
  "version": "2.1.0",
  "description": "Aplikasi desktop untuk menyimpan resep dan menghitung kalori serta harganya.",
  "author": "DeFood",
  "main": "src/electron/main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@google/generative-ai": "^0.14.1",
    "@hello-pangea/dnd": "^16.6.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/typography": "^0.5.13",
    "axios": "^1.7.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.1.8",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "vite": "^5.3.1",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "postinstall": "electron-rebuild -f -w sqlite3",
    "dev": "vite",
    "build:react": "vite build",
    "build": "npm run build:react && copyfiles -u 1 src/electron/**/* dist/electron && electron-builder",
    "test": "jest",
    "electron-start": "electron .",
    "electron:dev": "concurrently -k \"npm:dev\" \"wait-on http://localhost:5173 && electron .\""
  },
  "build": {
    "appId": "com.defood.app",
    "productName": "DeFood",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "Deadra-code",
      "repo": "DeFood"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
