{
  "name": "defood-refactored",
  "version": "2.0.0",
  "description": "Aplikasi desktop untuk menyimpan resep dan menghitung kalori serta harganya.",
  "author": "DeFood",
  "main": "src/electron/main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@hello-pangea/dnd": "^16.6.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.5",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "postinstall": "electron-rebuild -f -w sqlite3",
    "start": "react-scripts start",
    "build": "react-scripts build && copyfiles -u 1 src/electron/**/* build/electron",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "electron-start": "electron .",
    "electron:dev": "concurrently -k \"npm:react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "build": {
    "appId": "com.defood.app",
    "productName": "DeFood",
    "files": [
      "build/**/*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
